<UserControl x:Class="EdlinSoftware.BlackJack.UI.UserControls.ScoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1280">
    <Canvas>
        <Canvas.Resources>
            <Style x:Key="TextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="40" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="White" />
            </Style>
        </Canvas.Resources>
        <TextBlock Canvas.Left="10" Canvas.Top="10" x:Name="dealerMoney" Style="{StaticResource TextBlockStyle}" />
        <TextBlock Canvas.Left="640" Canvas.Top="10" x:Name="currentBet" Style="{StaticResource TextBlockStyle}" />
        <TextBlock Canvas.Left="830" Canvas.Top="10" x:Name="playerMoney" Style="{StaticResource TextBlockStyle}" />
    </Canvas>
</UserControl>
